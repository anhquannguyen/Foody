<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <ImageView
        android:id="@+id/img_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cloud_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/txt_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/notification_conn"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_cloud"
        app:layout_constraintStart_toStartOf="@+id/img_cloud"
        app:layout_constraintTop_toBottomOf="@+id/img_cloud" />

    <TextView
        android:id="@+id/txt_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/large_size"
        android:paddingTop="@dimen/small_size"
        android:paddingEnd="@dimen/large_size"
        android:paddingBottom="@dimen/small_size"
        android:text="@string/button_retry"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_err"
        app:layout_constraintStart_toStartOf="@+id/txt_err"
        app:layout_constraintTop_toBottomOf="@+id/txt_err" />
</android.support.constraint.ConstraintLayout>