<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anhqu.orderApp">

    <!-- To check internet connection status -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To check network state whether data can be downloaded or not -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To write to external storage as google maps store map data in external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- To determine user’s location using WiFi and mobile cell data -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- To determine user’s location using GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.example.anhqu.orderApp.services.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.anhqu.orderApp.ui.SplashScActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SpashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.anhqu.orderApp.ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.anhqu.orderApp.ui.food.FoodActivity"
            android:label="@string/food_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.anhqu.orderApp.ui.order.OrderActivity"
            android:label="@string/order_activity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.example.anhqu.orderApp.ui.login.LoginActivity"
            android:label="@string/signin_activity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name="com.example.anhqu.orderApp.ui.checkout.CheckOutActivity"
            android:label="@string/checkout_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.anhqu.orderApp.ui.CompleteActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Goolge API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_API" />
        <!-- Broadcast detecting network status -->
        <receiver
            android:name="com.example.anhqu.orderApp.services.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>